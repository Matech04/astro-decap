---
import { Image } from "astro:assets";
import import_image from "src/lib/import_image";

const { images } = Astro.props;

const Image1 = import_image(images[0].url);
const Image2 = import_image(images[1].url);
const Image3 = import_image(images[2].url);
const Image4 = import_image(images[3].url);
---

<style>
  div {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    grid-auto-flow: dense;
    gap: 1rem;
    margin-bottom: 2.5rem;

    @media (min-width: 1280px) {
      grid-template-columns: repeat(5, minmax(0, 1fr));
      grid-template-rows: repeat(3, minmax(0, 1fr));
    }
  }

  img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .first {
    grid-row: span 3;
    grid-column: span 3;
    width: 100%;
    height: 100%;
  }
  .sec {
    grid-row: span 3;
    grid-column: span 3;
    height: auto;

    @media (min-width: 1280px) {
      grid-row: span 2;
      grid-column: span 2;
    }
  }

  .third {
    grid-column: span 2;
    width: 100%;
    height: auto%;

    @media (min-width: 1280px) {
      grid-column: span 1;
    }
  }

  .forth {
    width: 100%;
    height: auto%;
  }
</style>

<div>
  <Image class="first" src={Image1} alt={images[0].alt} />
  <Image class="sec" src={Image2} alt={images[1].alt} />
  <Image class="third" src={Image3} alt={images[2].alt} />
  <Image class="forth" src={Image4} alt={images[3].alt} />
</div>
